/* pages/change/change.wxss */
.container {
  position: relative;
  min-height: 100%;
}

.header {
  height: 700rpx;
  width: 100%;
  background-size: 100% 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: #fff;
  z-index: 2;
  background: url("https://m.szduopin.com/image/cdk.png") no-repeat center;
  background-size: 100% 100%;
}

.activity-time {
  width: 460rpx;
  height: 50rpx;
  background: #2D8F30;
  border-radius: 22px;
  opacity: 0.7;
  position: absolute;
  left: 50%;
  top: 280rpx;
  margin-left: -230rpx;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
  line-height: 50rpx;
}

.abc-logo {
  width: 240rpx;
  height: 46rpx;
  position: absolute;
  left: 30rpx;
  top: 24rpx;
}

.order-list {
  width: 130rpx;
  height: 58rpx;
  background: rgba(255, 255, 255, 0.65);
  border-radius: 16px 0px 0px 16px;
  position: absolute;
  right: 0;
  top: 30rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 58rpx;
  color: #006E71;
}

.body {
  width: 100%;
  min-height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  box-sizing: border-box;
  padding: 20rpx;
  padding-top: 726rpx;
  background-color: #B6F3E0;
  box-sizing: border-box;
}

.card {
  width: 100%;
  height: 320rpx;
  background: url("https://m.szduopin.com/image/ccq-card-1.png") no-repeat center;
  background-size: 100% 100%;
  position: relative;
  overflow: hidden;
}

.form {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 50rpx;
  color: #FA701B;
}

.input {
  border: 1px solid #FA701B;
  border-radius: 12rpx;
  overflow: hidden;
  width: 500rpx;
  margin-left: 20rpx;
}

.confirm-button {
  height: 74rpx !important;
  width: 80% !important;
  margin-top: 24rpx;
}

.body .describe {
  margin-top: 50rpx;
  color: rgba(0, 0, 0, 0.65);
  font-size: 20rpx;
  text-align: center;
}

.body .activity-button {
  margin-top: 40rpx;
  text-align: center;
}

.body .activity-button .button {
  width: 50%;
  height: 66rpx;
  background: transparent;
}