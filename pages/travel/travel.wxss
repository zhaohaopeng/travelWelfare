/* pages/travel/travel.wxss */
.container {
  position: relative;
  min-height: 100%;
}

.header {
  height: 560rpx;
  width: 100%;
  background-size: 100% 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: #fff;
  z-index: 10;
  background: url("https://m.szduopin.com/image/travel.png") no-repeat center;
  background-size: 100% 100%;
}

.order-list {
  width: 130rpx;
  height: 58rpx;
  background: rgba(255, 255, 255, 0.65);
  border-radius: 16px 0px 0px 16px;
  position: absolute;
  right: 0;
  top: 30rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 58rpx;
  color: #006E71;
}

.activity-time {
  width: 460rpx;
  height: 50rpx;
  background: #2D8F30;
  border-radius: 22px;
  opacity: 0.7;
  position: absolute;
  left: 50%;
  top: 280rpx;
  margin-left: -230rpx;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
  line-height: 50rpx;
}

.abc-logo {
  width: 240rpx;
  height: 46rpx;
  position: absolute;
  left: 20rpx;
  top: 40rpx;
}

.body {
  width: 100%;
  min-height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  box-sizing: border-box;
  padding-top: 560rpx;
  background-color: #B6F3E0;
}

.card {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  padding: 20rpx;
}

.card-item {
  width: 100%;
  min-height: 200rpx;
  margin-bottom: 12rpx;
}

.card-item-1 {
  background: url("https://m.szduopin.com/image/card-3.png") no-repeat center;
  background-size: 100% 100%;
  height: 280rpx;
}

.card-item-2 {
  background: url("https://m.szduopin.com/image/card-2.png") no-repeat center;
  background-size: 100% 100%;
  height: 240rpx;
}

.card-item-3 {
  background: url("https://m.szduopin.com/image/card-1.png") no-repeat center;
  background-size: 100% 100%;
  height: 240rpx;
}