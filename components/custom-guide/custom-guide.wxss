/* components/custom-guide/custom-guide.wxss */
.wrapper {
  width: 90%;
  height: 90%;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 30rpx;
  margin-top: 50rpx;
}

.wrapper-block {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
}

.title {
  width: 100%;
  height: 80rpx;
  margin-top: 20rpx;
  line-height: 80rpx;
  text-align: center;
  position: relative;
  font-size: 30rpx;
}

.close {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  right: 20rpx;
  top: 0;
}

.close image {
  width: 100%;
  height: 100%;
}

.button {
  width: 80%;
  height: 60rpx;
  position: absolute;
  bottom: 60rpx;
  left: 50%;
  margin-left: -40%;
}