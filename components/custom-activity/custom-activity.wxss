/* components/custom-system-tips/custom-system-tips.wxss */
.wrapper {
  width: 90%;
  height: 1100rpx;
  margin: 0 auto;
  margin-top: 160rpx;
  background-color: #fff;
  border-radius: 30rpx;
}

.wrapper-block {
  width: 100%;
  height: 100%;
  height: auto;
  background: url("https://m.szduopin.com/image/model-bg.png") no-repeat top;
  background-size: 100% 340rpx;
  overflow: hidden;
}

.title {
  width: 100%;
  height: 80rpx;
  margin-top: 20rpx;
  line-height: 80rpx;
  text-align: center;
  position: relative;
  font-size: 30rpx;
}

.close {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  right: 20rpx;
  top: 0;
}

.close image {
  width: 100%;
  height: 100%;
}

.content {
  width: 100%;
  height: 840rpx;
  box-sizing: border-box;
  padding: 20rpx 40rpx;
  color: rgba(80, 53, 53, 0.65);
  line-height: 60rpx;
}

.content .text-1 {
  font-size: 28rpx;
  text-indent: 56rpx;
}

.content .text-2 {
  text-indent: 56rpx;
  font-size: 28rpx;
  line-height: 50rpx;
}

.button {
  width: 80%;
  height: auto;
  margin: 0 auto;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}