/* components/custom-system-tips/custom-system-tips.wxss */
.wrapper {
  width: 90%;
  height: auto;
  margin: 0 auto;
  margin-top: 40%;
  background-color: #fff;
  border-radius: 30rpx;
}

.wrapper-block {
  width: 100%;
  min-height: 500rpx;
  height: auto;
  background: url("https://m.szduopin.com/image/model-bg.png") no-repeat top;
  background-size: 100% 340rpx;
  overflow: hidden;
}

.title {
  width: 100%;
  height: 80rpx;
  margin-top: 20rpx;
  line-height: 80rpx;
  text-align: center;
  position: relative;
  font-size: 30rpx;
}

.close {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  right: 20rpx;
  top: 0;
}

.close image {
  width: 100%;
  height: 100%;
}

.icon {
  width: 100%;
  height: 140rpx;
  text-align: center;
}

.icon image {
  width: 140rpx;
  height: 140rpx;
}

.content {
  width: 100%;
  height: auto;
  position: relative;
  text-align: center;
  margin-top: 20rpx;
}

.content .message {
  color: rgba(0, 0, 0, 0.65);
  font-size: 40rpx;
  font-weight: bold;
}

.content .describe {
  width: 80%;
  margin: 0 auto;
  margin-top: 40rpx;
  color: rgba(0, 0, 0, 0.65);
  font-size: 28rpx;
}

.button {
  width: 80%;
  height: 60rpx;
  margin: 0 auto;
  margin-top: 60rpx;
  margin-bottom: 100rpx;
}